{
  "kind": "Config",
  "apiVersion": "v1beta1",
  "metadata": {
    "name": "wildfly-camel-domain",
    "description": "Creates a WildFly Camel domain"
  },
  "items": [
    {
      "id": "management-service",
      "kind": "Service",
      "apiVersion": "v1beta1",
      "containerPort": 9990,
      "port": 9990,
      "publicIPs": [ "172.30.0.21" ],
      "selector": {"name": "ctrl-pod"}
    },
    {
      "id": "domain-controller",
      "kind": "Service",
      "apiVersion": "v1beta1",
      "containerPort": 9999,
      "port": 9999,
      "publicIPs": [ "172.30.0.21" ],
      "selector": {"name": "ctrl-pod"}
    },
    {
      "id": "http-service",
      "kind": "Service",
      "apiVersion": "v1beta1",
      "containerPort": 8080,
      "port": 8080,
      "publicIPs": [ "172.30.0.21" ],
      "selector": {"name": "http-pod"}
    },
    {
      "apiVersion": "v1beta2",
      "id": "master-controller",
      "kind": "ReplicationController",
      "apiVersion": "v1beta2",
      "desiredState": {
        "replicas": 1,
        "replicaSelector": {
          "name": "ctrl-pod"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "name": "domain-controller",
                  "image": "wildflyext/wildfly-camel",
                  "env": [
                    {
                      "name": "WILDFLY_MANAGEMENT_USER",
                      "value": "admin"
                    },
                    {
                      "name": "WILDFLY_MANAGEMENT_PASSWORD",
                      "value": "admin"
                    }
                  ],
                  "command": [
                    "--domain-config",
                    "domain-camel.xml",
                    "--host-config",
                    "host-master.xml",
                    "-b",
                    "0.0.0.0",
                    "-bmanagement",
                    "0.0.0.0"
                  ],
                  "ports": [
                    {
                      "protocol": "TCP",
                      "containerPort": 9990
                    },
                    {
                      "protocol": "TCP",
                      "containerPort": 9999
                    }
                  ]
                }
              ]
            }
          },
          "labels": {"name": "ctrl-pod"}
        }
      }
    },
    {
      "apiVersion": "v1beta2",
      "id": "host-controller",
      "kind": "ReplicationController",
      "apiVersion": "v1beta2",
      "desiredState": {
        "replicas": 3,
        "replicaSelector": {
          "name": "http-pod"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "name": "domain-slave",
                  "image": "wildflyext/wildfly-camel",
                  "env": [
                    {
                      "name": "WILDFLY_MANAGEMENT_USER",
                      "value": "admin"
                    },
                    {
                      "name": "WILDFLY_MANAGEMENT_PASSWORD",
                      "value": "admin"
                    }
                  ],
                  "command": [
                    "--domain-config",
                    "domain-camel.xml",
                    "--host-config",
                    "host-camel-slave.xml",
                    "-b",
                    "0.0.0.0",
                    "-bmanagement",
                    "0.0.0.0"
                  ],
                  "ports": [
                    {
                      "protocol": "TCP",
                      "containerPort": 8080
                    }
                  ]
                }
              ]
            }
          },
          "labels": {"name": "http-pod"}
        }
      }
    }
  ]
}
